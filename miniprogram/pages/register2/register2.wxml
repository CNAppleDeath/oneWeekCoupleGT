<view>

  <text class="h1">我的择偶标准</text>

  <view class='wrap'>
  <text class='h2'>TA的性别</text>
  <view class='checkbox-con'>
  <radio-group bindchange="radioChange">
    <label class="{{item.checked?'checkbox checked':'checkbox'}}" wx:for="{{genderArray}}" bindtap='bindtapGender' data-index="{{index}}" wx:key="item.name">
    <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
    </label>
  </radio-group>
  </view>
  </view>

  <view class="wrap">
  <text class='h2'>TA最大的优点（选三个) 必填</text>
  <view class='checkbox-con'>
  <radio-group bindchange="radioChange">
    <label class="{{item.checked?'checkbox checked':'checkbox'}}" wx:for="{{meritArray}}" bindtap='bindtapMerit' data-index="{{index}}" wx:key="item.name">
    <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.name}}
    </label>
  </radio-group>
  </view>

  <view class='wrap'>
  <text class='h2'>年龄 (可以不写)</text>
  <input class="placeholder" placeholder="请输入年龄" value="{{expectedAge}}" bindinput="bindKeyInputExpectedAge" />
  </view>

  <view class='wrap'>
  <text class='h2'>身高 厘米 (可以不写)</text>
  <input class="placeholder" placeholder="请输入身高" value="{{expectedHeight}}" bindinput="bindKeyInputExpectedHeight" />
  </view>

  <view class='wrap'>
  <text class='h2'>体重 公斤 (可以不写)</text>
  <input class="placeholder" placeholder="请输入体重" value="{{expectedWeight}}" bindinput="bindKeyInputExpectedWeight" />
  </view>

  <button type="primary" style="margin-top: 30rpx;" bindtap='insertData'>进入GT一周CP</button>
  </view>
</view>